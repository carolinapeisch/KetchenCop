<div class="container">
  <%= render 'header' %>
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Products</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Upc code</th>
        <th>Product code</th>
        <th>Sell by date</th>
        <th>Image</th>
        <th colspan="6"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.upc_code %></td>
          <td><%= product.product_code %></td>
          <td><%= product.sell_by_date %></td>
          <td> <img style="max-width:128px;max-height:128px;", src=<%= asset_path(Image.find_by_id(product.image_id).filename) %>> </td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <a href="/products/new" class="btn btn-default" role="button">New Product</a></a>
  <br>
  <div>
      <h1>Batch Upload</h1>
      <%= form_tag("/products/upload", method: "post", class: "form-horizontal") do %>
          <div class="form-group">
              <div class="col-sm-10">
                <%= text_area_tag :json_data, nil, :required => true, 
                :rows => 10, :class => "form-control",
                :placeholder => "[\n\t{\n\t\t\"id\": 123,\n\t\t 
                \"name\": \"Blue Bunny Hoppin Hollidoodle Ice Cream \",\n\t\t 
                \"upc_code\": \"070640014644\",\n\t\t 
                \"product_code\": \"60001 MM 19115 6229\",\n\t\t 
                \"sell_by_date\": \"02/13/18\",\n\t\t 
                \"image_id\": 1,\n\t\t 
                \t}\n]"%>
              </div>
          </div>
          <div class="form-group">
              <div class="col-sm-10">
                  <%= submit_tag("Upload", :class => "btn btn-default" ) %>
              </div>
          </div>
      <% end %>
  </div>
</div>
